    <script>
    document.addEventListener('DOMContentLoaded', function () {
        Chart.register(ChartDataLabels);
        const initialFunnelData = { reach: 1000000, ctr: 2.5, cvr: 40 };
        const ctrSlider = document.getElementById('ctrSlider'), cvrSlider = document.getElementById('cvrSlider'), reachValueEl = document.getElementById('reachValue'), clicksValueEl = document.getElementById('clicksValue'), signupsValueEl = document.getElementById('signupsValue'), ctrValueEl = document.getElementById('ctrValue'), cvrValueEl = document.getElementById('cvrValue'), sensitivityBtn = document.getElementById('sensitivityBtn'), pivotPlan = document.getElementById('pivotPlan'), blendedCACEl = document.getElementById('blendedCAC');
        let phasedBudgetChart;
        function formatNumber(num) { return new Intl.NumberFormat('en-IN').format(num); }
        function updateFunnel(data, isSimulation = false) {
            const clicks = data.reach * (data.ctr / 100);
            const signups = clicks * (data.cvr / 100);
            const blendedCAC = signups > 0 ? 300000 / signups : 0;
            reachValueEl.textContent = formatNumber(data.reach);
            clicksValueEl.textContent = formatNumber(Math.round(clicks));
            signupsValueEl.textContent = formatNumber(Math.round(signups));
            ctrValueEl.textContent = `${data.ctr.toFixed(1)}%`;
            cvrValueEl.textContent = `${data.cvr.toFixed(0)}%`;
            if (blendedCACEl) blendedCACEl.textContent = `‚Çπ${blendedCAC.toFixed(0)}`;
            if (!isSimulation) { ctrSlider.value = data.ctr; cvrSlider.value = data.cvr; }
        }
        function renderCharts() {
            if (document.getElementById('phasedBudgetChart')) {
                const phasedBudgetCtx = document.getElementById('phasedBudgetChart').getContext('2d');
                phasedBudgetChart = new Chart(phasedBudgetCtx, {
                    type: 'bar',
                    data: {
                        labels: ['Phase 1 (Days 1-30)', 'Phase 2 (Days 31-60)', 'Phase 3 (Days 61-90)'],
                        datasets: [
                            { label: 'Influencers', data: [50000, 40000, 30000], backgroundColor: '#14b8a6' },
                            { label: 'Campus Program', data: [30000, 30000, 30000], backgroundColor: '#22c55e' },
                            { label: 'Meta Ads', data: [10000, 20000, 30000], backgroundColor: '#3b82f6' },
                            { label: 'Content/Ops', data: [10000, 10000, 10000], backgroundColor: '#64748b' }
                        ]
                    },
                    options: {
                        plugins: { legend: { position: 'bottom' }, datalabels: { color: 'white', formatter: (value) => `‚Çπ${value/1000}k` } },
                        responsive: true, maintainAspectRatio: false,
                        scales: { x: { stacked: true }, y: { stacked: true, ticks: { callback: value => `‚Çπ${value/1000}k` } } }
                    }
                });
            }
        }
        function runSimulation(){
            const reducedCtr = initialFunnelData.ctr * 0.875, reducedCvr = initialFunnelData.cvr * 0.875;
            updateFunnel({ ...initialFunnelData, ctr: reducedCtr, cvr: reducedCvr }, true);
            pivotPlan.classList.remove('hidden');
            sensitivityBtn.textContent = 'Protocol Activated';
            sensitivityBtn.disabled = true;
            sensitivityBtn.classList.add('bg-gray-400', 'cursor-not-allowed');
            sensitivityBtn.classList.remove('bg-red-600', 'hover:bg-red-700');
        }
        ctrSlider.addEventListener('input', (e) => { initialFunnelData.ctr = parseFloat(e.target.value); updateFunnel(initialFunnelData); });
        cvrSlider.addEventListener('input', (e) => { initialFunnelData.cvr = parseInt(e.target.value); updateFunnel(initialFunnelData); });
        sensitivityBtn.addEventListener('click', runSimulation);
        const navLinks = document.querySelectorAll('.nav-link'), sections = document.querySelectorAll('section');
        window.addEventListener('scroll', () => {
            let current = ''; sections.forEach(section => { if (pageYOffset >= section.offsetTop - 120) { current = section.getAttribute('id'); } });
            navLinks.forEach(link => { link.classList.remove('active'); if (link.getAttribute('href').includes(current)) { link.classList.add('active'); }});
        });
        updateFunnel(initialFunnelData); renderCharts();
    });
    </script>
</body>
</html>
